{
    "manifest_version": 3,
    "name": "My Screen Pet MVP",
    "version": "1.2",
    "description": "Menampilkan pet berjalan, teleport, dan duduk santai di layar browser.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/walk_1.png",
            "48": "assets/walk_1.png",
            "128": "assets/walk_1.png"
        }
    },
    "icons": {
        "16": "assets/walk_1.png",
        "48": "assets/walk_1.png",
        "128": "assets/walk_1.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/walk_1.png",
                "assets/walk_2.png",
                "assets/walk_1_blink.png",
                "assets/walk_2_blink.png",
                "assets/sit_1.png",
                "assets/sit_blink.png",
                "assets/idle_blink.png",
                "assets/jump_shock.png",
                "assets/jump_land.png",
                "assets/sfx/jump.wav",
                "assets/sfx/land.wav",
                "assets/sfx/step.wav"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}