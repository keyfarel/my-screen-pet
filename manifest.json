{
  "manifest_version": 3,
  "name": "My Screen Pet (Axo)",
  "version": "1.3",
  "description": "Desktop pet with modular architecture.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/skins/axo/walk_1.png",
      "48": "assets/skins/axo/walk_1.png",
      "128": "assets/skins/axo/walk_1.png"
    }
  },
  "icons": {
    "16": "assets/skins/axo/walk_1.png",
    "128": "assets/skins/axo/walk_1.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": [
        "scripts/config.js",
        "scripts/state.js",
        "scripts/pet.js",
        "scripts/main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/skins/axo/*.png", 
        "assets/common/sfx/*.wav"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}